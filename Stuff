        <h1>LiterACE Hub HTML Version</h1>
    </header>

    <!-- Container for game buttons -->
    <div id="buttonContainer"></div>

    <!-- Container for the game iframe -->
    <div id="gameContainer"></div>

    <!-- Clear Game button -->
    <button onclick="removeGame()" class="clear-button">Clear Game</button>

    <!-- JavaScript section for creating game buttons and handling iframe removal -->
    <script>
        // Function to create a new button with a specified name and link
        function createGameButton(name, link) {
            var button = document.createElement("button");
            button.textContent = name;
            button.classList.add("game-button");

            button.addEventListener("click", function() {
                var iframe = document.createElement("iframe");
                iframe.src = link;
                iframe.width = "100%";
                iframe.height = 700;
                document.getElementById("gameContainer").innerHTML = '';
                document.getElementById("gameContainer").appendChild(iframe);
            });

            document.getElementById("buttonContainer").appendChild(button);
        }

        // Creating game buttons with name and link
        createGameButton("Game Files", "https://gfiles.oasis0test.repl.co/");
